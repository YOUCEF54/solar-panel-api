# ============ Application ============
PROJECT_NAME=Smart Solar Panel Cleaner API
DEBUG=False
API_VERSION=1.0.0

# ============ Serveur ============
HOST=0.0.0.0
PORT=8000
RELOAD=False

# ============ JWT & Authentification ============
# ⚠️ IMPORTANT: Générez une clé secrète forte en production!
# Utilisez: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-super-secret-key-change-in-production-use-secrets-token-urlsafe
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============ Firebase ============
FIREBASE_CREDENTIALS_PATH=serviceAccountKey.json

# ============ Sécurité ============
# Rate limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# ============ Logging ============
LOG_LEVEL=INFO
LOG_FORMAT=json

# ============ MQTT ============
MQTT_BROKER_HOST=d991e6f845314d0aa0594029c0cc9086.s1.eu.hivemq.cloud
MQTT_BROKER_PORT=8883
MQTT_BROKER_USERNAME=solar_panel
MQTT_BROKER_PASSWORD=Solar_panel/1234
MQTT_CLIENT_ID=solar-panel-api
MQTT_KEEPALIVE=60
MQTT_QOS=1
MQTT_RETAIN=false
MQTT_USE_TLS=true

# Topics MQTT
MQTT_TOPIC_PANELS=solar/panels/+/data
MQTT_TOPIC_CLEANING=solar/cleaning/+/status
MQTT_TOPIC_ALERTS=solar/alerts/+/message
MQTT_TOPIC_SOLAR_PANEL=solar/panel/#  # Topic principal pour écouter tous les panneaux solaires